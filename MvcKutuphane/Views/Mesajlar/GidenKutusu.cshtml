@model List<Mesajlar>
@{
    ViewBag.Title = "GidenKutusu";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Giden Kutusu</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Alıcı</th>
            <th>Konu</th>
            <th>Mesaj</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Alici</td>
                <td>@item.Konu</td>
                <td>@item.Icerik</td>
            </tr>
        }
    </tbody>
</table>