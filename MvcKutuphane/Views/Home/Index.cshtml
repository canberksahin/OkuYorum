@model MvcKutuphane.Models.Classes.VitrinIndexViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.8, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Vitrin</title>

    <!-- Custom fonts for this theme -->
    <link href="~/web/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Theme CSS -->
    <link href="~/web/css/freelancer.min.css" rel="stylesheet">>
    <style>
        body {
            font-size: 12px;
            width: 75%;
        }
    </style>
</head>

<body id="page-top" class="mx-auto">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" style="height:60px;" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">OkuYorum</a>
            <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#portfolio">Kitaplar</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">İşlenen Konular</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#contact">İletişim</a>
                    </li>
                    @if (Session["Mail"] != null)
                    {
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="@Url.Action("Index","Panelim",new { area=""})">Hesabım</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="@Url.Action("Index","Giris",new { area=""})">Giriş Yap</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Masthead -->
    <header class="masthead bg-primary text-white text-center pt-5">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Avatar Image -->
            <img class="masthead-avatar mb-3 mt-5" src="~/web/img/library.png" alt="">

            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0">OkuYorum</h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Masthead Subheading -->
            <p class="masthead-subheading font-weight-light mb-0">"Çiçek dolu bir bahçe,kitap dolu bir ev"</p>

        </div>
    </header>

    <!-- Portfolio Section -->
    <section class="page-section portfolio pt-5" id="portfolio">
        <div class="container">

            <!-- Portfolio Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0 mt-0">Kitaplar</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="row">
                            <!-- Portfolio Item 1 -->
                            @for (int i = 0; i < 8; i++)
                            {
                                <div class="col-md-6 col-lg-3">
                                    <div class="portfolio-item mx-auto text-center" data-toggle="modal" data-target="#@Model.Kitaplar[i].Yazar1.Ad@Model.Kitaplar[i].Id">
                                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                            <div class="portfolio-item-caption-content text-center text-white">
                                                <i class="fas fa-plus fa-3x"></i>
                                            </div>
                                        </div>
                                        <img class="img-fluid" style="height:250px;width:auto;" src="@Url.UrunResim(Model.Kitaplar[i].KitapKapak)" alt="">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    @for (int i = 1; i < ((Model.Kitaplar.Count()) / 8)+1; i++)
                    {
                        <div class="carousel-item">
                            <div class="row">
                                
                                @for (int j = 0; j < (Model.Kitaplar.Count-8*i); j++)
                                {
                                    <div class="col-md-6 col-lg-3">
                                        <div class="portfolio-item mx-auto text-center" data-toggle="modal" data-target="#@Model.Kitaplar[8*i +j].Yazar1.Ad@Model.Kitaplar[8*i +j].Id">
                                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                                <div class="portfolio-item-caption-content text-center text-white">
                                                    <i class="fas fa-plus fa-3x"></i>
                                                </div>
                                            </div>
                                            <img class="img-fluid" style="height:250px;width:auto;" src="@Url.UrunResim(@Model.Kitaplar[8*i +j].KitapKapak)" alt="">
                                        </div>
                                    </div>
                                    if (j==7)
                                    {
                                        break;
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" style="width:50px;" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" style="width:50px;" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="page-section bg-primary text-white mb-0 pt-5" id="about">
        <div class="container">

            <!-- About Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-white">Yapım Aşamasında İşlenen Konular</h2>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- About Section Content -->
            <div class="row">
                <div class="col-lg-3 ml-auto">
                    <p class="lead">
                        Model
                        <ul>
                            <li>EF(OnModelCreating, CascadeDeleteOff, Migrations, GenerateScript)</li>
                            <li>Data Annotations(Required, Display, MaxLength, Table, NotMapped, RegularExpression, Custom Attributes)</li>
                        </ul>
                    </p>
                </div>
                <div class="col-lg-3 mr-auto">
                    <p class="lead">
                        View
                        <ul>
                            <li>Razor Tagleri</li>
                            <li>Shared</li>
                            <li>WebConfig</li>
                            <li>HtmlHelpers(url.Action, using, BeginForm, LabelFor, DropDownListFor, TextBoxFor, TextAreaFor, ValidationMessageFor, AntiForgeryToken, ActionLink, HiddenFor, FormMethod)</li>
                            <li>Bootstrap Modals</li>
                            <li>Sections</li>
                            <li>Layout(Script, cdn, RenderBody, RenderSection)</li>
                        </ul>
                    </p>
                </div>
                <div class="col-lg-3 mr-auto">
                    <p class="lead">
                        Controller
                        <ul>
                            <li>Crud(Get,Post, AntiForgeryToken)</li>
                            <li>Validation (ModelState, ValidationAttribute)</li>
                            <li>ViewBag,ViewData,TempData</li>
                            <li>ActionResult(ViewResult, RedirectResult, HttpStatusCodeResult)</li>
                            <li>ModelBinding</li>
                            <li>FileUpload (HttpPostedFileBase, Server.MapPath, GetExtension, Enctype)</li>
                            <li>BaseController (Dispose, db)</li>
                        </ul>
                    </p>
                </div>
                <div class="col-lg-3 mr-auto">
                    <p class="lead">
                        C#
                        <ul>
                            <li>Reflection (GetType, GetProperties)</li>
                            <li>Refactoring</li>
                            <li>Guid</li>
                            <li>Extension Methods</li>
                            <li>String Split</li>
                            <li>File,IO</li>
                        </ul>
                    </p>
                </div>
            </div>

        </div>
    </section>

    <!-- Contact Section -->
    <section class="page-section pt-5" id="contact">
        <div class="container">

            <!-- Contact Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">İletişim</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Contact Section Form -->
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    <form action="https://formspree.io/canberksahin20@gmail.com" name="sentMessage" id="contactForm" novalidate="novalidate">
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Ad</label>
                                <input class="form-control" id="name" type="text" placeholder="Adınız" required="required" data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Email Adresi</label>
                                <input class="form-control" id="email" type="email" placeholder="Email Adresi" required="required" data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Telefon Numarası</label>
                                <input class="form-control" id="phone" type="tel" placeholder="Telefon" required="required" data-validation-required-message="Please enter your phone number.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Mesajınız</label>
                                <textarea class="form-control" id="message" rows="5" placeholder="Mesaj" required="required" data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-xl" id="sendMessageButton">Send</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </section>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            <div class="row">

                <!-- Footer Location -->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">Adres</h4>
                    <p class="lead mb-0">
                        Ankara,Türkiye
                        <br>Ayrancı Mahallesi
                    </p>
                </div>

                <!-- Footer Social Icons -->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">Sosyal Medya</h4>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-facebook-f"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-twitter"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-linkedin-in"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-dribbble"></i>
                    </a>
                </div>

                <!-- Footer About Text -->
                <div class="col-lg-4">
                    <h4 class="text-uppercase mb-4">Kütüphane Modülü</h4>
                    <p class="lead mb-0">
                        Bu proje MVC 5 platformunda Bootstrap, Js, Css tasarımları ile hazırlanmıştır.
                        <a href="http://canberksahin.com" target="_blank">Canberk Şahin</a>.
                    </p>
                </div>

            </div>
        </div>
    </footer>

    <!-- Copyright Section -->
    <section class="copyright py-4 text-center text-white">
        <div class="container">
            <small>Copyright &copy; Your Website 2019</small>
        </div>
    </section>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-to-top d-lg-none position-fixed ">
        <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- Portfolio Modals -->
    <!-- Portfolio Modal 1 -->
    @foreach (var item in Model.Kitaplar)
    {
        <div class="portfolio-modal modal fade" id="@item.Yazar1.Ad@item.Id" tabindex="-1" role="dialog" aria-labelledby="portfolioModal1Label" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">
                            <i class="fas fa-times"></i>
                        </span>
                    </button>
                    <div class="modal-body text-center">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <!-- Portfolio Modal - Title -->
                                    <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">@item.Ad</h2>
                                    <!-- Icon Divider -->
                                    <div class="divider-custom">
                                        <div class="divider-custom-line"></div>
                                        <div class="divider-custom-icon">
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <div class="divider-custom-line"></div>
                                    </div>
                                    <!-- Portfolio Modal - Image -->
                                    <img class="img-fluid rounded mr-2 float-left" style="height:300px;width:auto;" src="@Url.UrunResim(item.KitapKapak)" alt="">
                                    <!-- Portfolio Modal - Text -->
                                    <p class="mb-5">@item.Ozet</p>
                                    <a class="btn btn-primary" href="https://dosya.co/z190wfvl5013/Kemal_Tahir_-_Esir_Sehrin_İnsanları.pdf.html" target="_blank">
                                        <i class="far fa-file-pdf fa-fw"></i>
                                        PDF'ini indir
                                    </a>
                                    <a href="@Url.Action("Show", "Kitap", new { id = item.Id, slug = item.Slug })" class="btn btn-primary">
                                        Kitap Yorumlarına Bak &rarr;
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- Bootstrap core JavaScript -->
    <script src="~/web/vendor/jquery/jquery.min.js"></script>
    <script src="~/web/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/web/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="~/web/js/jqBootstrapValidation.js"></script>
    <script src="~/web/js/contact_me.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/web/js/freelancer.min.js"></script>
    <!-- For Contact form -->
    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="~/Scripts/Slug.js"></script>
    <script src="~/Scripts/highlight.js"></script>
    <script src="~/Scripts/app.js"></script>
</body>

</html>

