    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Course Register Form a Flat Responsive Widget Template :: w3layouts</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Course Register Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <!-- css files -->
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=devanagari,latin-ext" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="~/webregister/css/style.css" type="text/css" rel="stylesheet" media="all">
    <!-- //css files -->

    <link rel="stylesheet" href="~/webregister/css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->

</head>
<!-- body starts -->
<body>
    <!-- section -->
    <section class="register">
        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <div class="logo">
                        <a href="#"><span class="fa fa-graduation-cap" aria-hidden="true"></span></a>
                    </div>
                    <h1>MVC 5 Kütüphane Yönetim Sistemi</h1>
                    <p>
                        Kütüphanemize hoşgeldiniz, kayıt olmak için sağ taraftaki formu doldurup ödünç kitap almaya başlayabilirsiniz.
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="~/weblogin/GirisYap"> Giriş Yap</a></li>
                            <li><a class="read" href="~/Vitrin/Index"> Siteye Dön</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <h2><span class="fa fa-pencil"></span> Kayıt Paneli</h2>
                    <div class="register-form">
                        <form action="@Url.Action("Kayit","KayitOl")" method="post">
                            <div class="fields-grid">
                                <div class="styled-input agile-styled-input-top">
                                    <input type="text" name="Ad" required="required">
                                    <label>Adınız</label>
                                    <span></span>
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    <input type="text" name="Soyad" required="required">
                                    <label>Soyadınız</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="email" name="Mail" required="required">
                                    <label>Email</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="text" name="KullaniciAdi" required="required">
                                    <label>Kullanıcı Adı</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="password" name="Sifre" required="required">
                                    <label>Şifre</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="tel" name="Telefon" required="">
                                    <label>Telefon</label>
                                    <span></span>
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    <select id="category2" name="Okul" required="required">
                                        <option value="">Okulunuzu seçiniz</option>
                                        <option value="Orta Doğu Teknik Ünüversitesi">Orta Doğu Teknik Ünüversitesi</option>
                                        <option value="Boğaziçi Üniversitesi">Boğaziçi Üniversitesi</option>
                                        <option value="Hacettepe Üniversitesi">Hacettepe Üniversitesi</option>
                                        <option value="Nişantaşı Üniversitesi">Nişantaşı Üniversitesi</option>
                                        <option value="Sabancı Üniversitesi">Sabancı Üniversitesi</option>
                                    </select>
                                    <span></span>
                                </div>
                                <div class="clear"> </div>
                                <label class="checkbox"><input type="checkbox" name="checkbox" checked><i></i>Şartları okudum <a href="#">ve kabul ediyorum</a></label>
                            </div>
                            <input type="submit" value="Register">
                        </form>
                    </div>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2020 Course Register Form. All Rights Reserved | Design by <a href="https://canberksahin.com" target="_blank">Canberk Şahin</a></p>
        <!-- //copyright -->
    </section>
    <!-- //section -->
</body>
<!-- //body ends -->
</html>