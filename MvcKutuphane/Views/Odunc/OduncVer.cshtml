@model Hareket
@{
    ViewBag.Title = "OduncVer";
}
@using (Html.BeginForm("OduncVer", "Odunc", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("IslemDurum",false)
    <div class="form-group">
        <label>Üye ID</label>
        @Html.TextBoxFor(x => x.Uye, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Uye, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Kitap ID</label>
        @Html.TextBoxFor(x => x.Kitap, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Kitap, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Personel ID</label>
        @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Personel, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x=>x.AlisTarihi)
        <input type="text" class="form-control" name="AlisTarihi" value="@DateTime.Now.ToShortDateString()" />
        @Html.ValidationMessageFor(x => x.AlisTarihi, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.IadeTarihi)
        <input type="text" class="form-control" name="IadeTarihi" value="@DateTime.Now.AddDays(7).ToShortDateString()" readonly="readonly"/>
        @Html.ValidationMessageFor(x => x.IadeTarihi, null, new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Kitap Ödünç Ver</button>
    <a href="@Url.Action("Index","Kitap")" class="btn btn-danger">İptal</a>
}