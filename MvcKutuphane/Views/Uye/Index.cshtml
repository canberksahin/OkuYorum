@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Uyeler>
@{
    ViewBag.Title = "Index";
}

<h2>Üyeleri Listele</h2>


<table class="table table-hover table table-striped mt-3">
    <thead  style="font-weight:bold">
        <tr>
            <td>Id</td>
            <td>Ad</td>
            <td>Soyad</td>
            <td>E-Mail</td>
            <td>Kullanıcı Adı</td>
            <td>Şifre</td>
            <td>Telefon</td>
            <td>Okul</td>
            <td>Fotograf</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Ad</td>
            <td>@item.Soyad</td>
            <td>@item.Mail</td>
            <td>@item.KullaniciAdi</td>
            <td>@item.Sifre</td>
            <td>@item.Telefon</td>
            <td>@item.Okul</td>
            <td>@item.Fotograf</td>
            <td>
                <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#silModal"
                   data-kat-id="@item.Id" data-kat-ad="@item.Ad">
                    <i class="fa fa-trash"></i>
                </a>
                <a href="@Url.Action("Duzenle", new {id =item.Id })" class="btn btn-success"><i class="fa fa-edit"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model,sayfa => Url.Action("Index",new { sayfa }))


<a href="@Url.Action("Yeni","Uye")" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni Üye Ekle</a>

@using (Html.BeginForm("Sil", "Uye", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <!-- Modal -->
    <div class="modal fade" id="silModal" tabindex="1" role="dialog" aria-labelledby="silModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="silModalTitle">Silme Onayı</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    &quot;<span id="silKatAd">xxx</span>&quot; adlı kategorinin silinmesini onaylıyor musunuz?

                    <input type="hidden" id="silKatId" name="id" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Evet</button>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
        $('#silModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // modalın açılmasını tetikleyen buton
            var Ad = button.data('kat-ad'); // tetikleyici buton üzerindeki data-urun-ad attribute'u
            var Id = button.data('kat-id'); // tetikleyici buton üzerindeki data-urun-id attribute'u
            var modal = $(this); // açılan modal'ın kendisi
            modal.find('#silKatAd').text(Ad); // modal üzerindeki kat ad span'ı
            modal.find('#silKatId').val(Id); // modal üzerindeki kat id hidden alanı
        });
    </script>
}