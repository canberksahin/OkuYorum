<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Yönetim Paneli</title>

    <!-- Bootstrap core CSS -->
    <link href="~/panel/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/fontawesome-all.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/panel/css/simple-sidebar.css" rel="stylesheet">

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">@Session["Mail"]</div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index","Panelim")" class="list-group-item list-group-item-action bg-light">Profilim</a>
                <a href="@Url.Action("Index","Mesajlar")" class="list-group-item list-group-item-action bg-light">Gelen Kutusu</a>
                <a href="@Url.Action("GidenKutusu","Mesajlar")" class="list-group-item list-group-item-action bg-light">Giden Kutusu</a>
                <a href="@Url.Action("YeniMesaj","Mesajlar")" class="list-group-item list-group-item-action bg-light">Yeni Mesaj</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Duyurular</a>
                <a href="@Url.Action("Kitaplarım","Panelim")" class="list-group-item list-group-item-action bg-light">Kitaplarım</a>
                <a href="@Url.Action("Index","Vitrin")" class="list-group-item list-group-item-action bg-light">Vitrin</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Yardım</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-bars"></i></button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Index","Vitrin")#about">Hakkımızda <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Ayarlar
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Hesabım</a>
                                <a class="dropdown-item" href="#">Çıkış Yap</a>
                                <div class="dropdown-divider"></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/panel/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap-switch.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");

        });
    </script>

</body>

</html>

