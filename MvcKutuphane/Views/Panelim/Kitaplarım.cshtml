@model List<Yorums>
@{
    ViewBag.Title = "Kitaplarım";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Yorumlarım</h2>

<table class="table table-hover table table-striped mt-3">
    <thead style="font-weight:bold">
        <tr class="text-center">
            <td>Kitap Adı</td>
            <td>Kitap Kapak Foto</td>
            <td>Yorum</td>
            <td>Tarih</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.Kitap.Ad</td>
                <td class="text-center">
                    <img src="@Url.UrunResim(item.Kitap.KitapKapak)" height="100" />
                </td>
                <td>@item.Icerik</td>
                <td>@Convert.ToDateTime(item.YayinlanmaZamani).ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#silModal"
                       data-kitap-id="@item.Id" data-kitap-ad="@item.Icerik">
                        <i class="fa fa-trash"></i>
                    </a>
                    <a href="@Url.Action("Duzenle", new { id = item.Id })" class="btn btn-success"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@using (Html.BeginForm("Sil", "Panelim", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <!-- Modal -->
    <div class="modal fade" id="silModal" tabindex="1" role="dialog" aria-labelledby="silModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="silModalTitle">Silme Onayı</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    &quot;<span id="silKitapAd">xxx</span>&quot; yorumun silinmesini onaylıyor musunuz?

                    <input type="hidden" id="silKitapId" name="id" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Evet</button>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
        $('#silModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // modalın açılmasını tetikleyen buton
            var Ad = button.data('kitap-ad'); // tetikleyici buton üzerindeki data-urun-ad attribute'u
            var Id = button.data('kitap-id'); // tetikleyici buton üzerindeki data-urun-id attribute'u
            var modal = $(this); // açılan modal'ın kendisi
            modal.find('#silKitapAd').text(Ad); // modal üzerindeki kitap ad span'ı
            modal.find('#silKitapId').val(Id); // modal üzerindeki kitap id hidden alanı
        });
    </script>
}